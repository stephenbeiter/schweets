<div class="mb-3 card card-body">
  <div class="mb-3">
    <%= image_tag tweet.twitter_account.image, class: "rounded-circle h-50 mr-2" %>
    <%= link_to "@#{tweet.twitter_account.username}", "https://twitter.com/#{tweet.twitter_account.username}", target: :_blank, class: "card-link" %>

    <% if tweet.published? %>
      <%= link_to "View Tweet", "https://twitter.com/#{tweet.twitter_account.username}/status/#{tweet.tweet_id}", target: :_blank %>
    <% else %>
      Scheduled for <%= l tweet.publish_at, format: :long %>
      <%= link_to "Edit tweet", edit_tweet_path(tweet), class: "btn btn-info" %>
    <% end %>
  </div>
  <%= tweet.body %>
</div>