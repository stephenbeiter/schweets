<div class="d-flex align-items-center justify-content-between mb-4">
  <h1>Twitter Accounts</h1>
  <%= button_to "Add Account", "/auth/twitter", method: :post, class: "btn btn-primary" %>
</div>

<div class="card mb-4">
  <% @twitter_accounts.each do |twitter_account| %>
    <div class="card-body d-flex align-items-center justify-content-between">
      <div class="me-4">
        <%= image_tag twitter_account.image, class: "rounded-circle h-50 mr-2" %>
        <%= link_to "@#{twitter_account.username}", "https://twitter.com/#{twitter_account.username}", target: :_blank, class: "card-link" %>
      </div>

      <%= button_to "Remove Account", twitter_account, method: :delete, class: "btn btn-secondary", data: {confirm: "Are you sure you want to remove this account?"} %>
    </div>
  <% end %>
</div>